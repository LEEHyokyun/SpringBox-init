<title>step10-ajax</title>
<script type="text/javascript">
	$(function(){
		$("#countBtn1").click(function(){
			$.ajax({
				type: "get",
				url: "getProductTotalCount",
				success: function(result){
					$("#productCountView1").html(result);
				}
			});
		});
	});
</script>
</head>
<body>
<div class="container pt-4">
<!--/* thymeleaf ajax */-->
