<!--/* thymeleaf class*/-->
<a href="/" th:href="@{/}">Home</a><br>
<span th:text="|상품수: ${#lists.size(productList)}|">상품수</span><br>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>No</th>
			<th>ID</th>
			<th>NAME</th>
			<th>MAKER</th>
			<th>PRICE</th>
			<th>GIFT</th>
		</tr>
	</thead>
		<!--/* lists를 사용하여 data loop, gift 정보에 따라 사은품 있음/없음 표기 */-->
	<tbody>
		<tr th:each="pList:${productList}">
			<td th:text="${pListStat.count}">No</td>
			<td th:text="${pList.productId}">ID</td>
			<td th:text="${pList.name}">NAME</td>
			<td th:text="${pList.maker}">MAKER</td>
			<td th:text="${pList.price}">PRICE</td>
			<th:block th:if="${pList.gift}">
			<td th:text="${pList.gift}">사은품 있음</td>
			</th:block>
			<th:block th:unless="${pList.gift}">
			<td th:text="${pList.gift}">사은품 없음</td>
			</th:block>
		</tr>
	</tbody>
</table>
